@article{vanderheijdenComparisonRandomizedResponse2000,
  title = {A Comparison of Randomized Response, Computer-Assisted Self-Interview, and Face-to-Face Direct Questioning - {{Eliciting}} Sensitive Information in the Context of Welfare and Unemployment Benefit},
